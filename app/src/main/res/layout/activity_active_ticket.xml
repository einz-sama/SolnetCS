<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.cust.ActiveTicketActivity"
    android:background="@drawable/androidsmall_23">

    <TextView
        android:id="@+id/tv_fillFormPrompt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="16dp"
        android:text="Laporan Gangguan"
        android:textStyle="bold"
        android:textSize="24sp"
        android:fontFamily="@font/ubuntu_bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tv_dateReported"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="16dp"
        android:text="Dilaporkan pada 12/12/2020 12:12"
        android:textSize="18sp"
        android:fontFamily="@font/ubuntu_medium"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_fillFormPrompt"/>

    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/menu_background"
        app:layout_constraintTop_toBottomOf="@+id/tv_dateReported"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tv_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:text="@string/text_info_kedatangan"
        android:textSize="16sp"
        android:fontFamily="@font/ubuntu_regular"
        android:textAlignment="center"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="@id/view1"
        app:layout_constraintBottom_toBottomOf="@id/view1"
        app:layout_constraintStart_toStartOf="@id/view1"
        app:layout_constraintEnd_toEndOf="@id/view1"/>

    <TextView
        android:id="@+id/tv_textNoReferensi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="16dp"
        android:text="No Referensi/Ticket"
        android:textSize="18sp"
        android:fontFamily="@font/ubuntu_regular"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view1"/>

    <TextView
        android:id="@+id/tv_NoReferensi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="16dp"
        android:text="SI/TP/123456890"
        android:textSize="20sp"
        android:fontFamily="@font/ubuntu_bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_textNoReferensi"/>

    <TextView
        android:id="@+id/tv_textJenisGangguan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="16dp"
        android:text="Jenis Gangguan"
        android:textSize="18sp"
        android:fontFamily="@font/ubuntu_regular"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_NoReferensi"/>

    <TextView
        android:id="@+id/tv_jenisGangguan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="16dp"
        android:text="Internet terputus"
        android:textSize="20sp"
        android:fontFamily="@font/ubuntu_bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_textJenisGangguan"/>

    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/menu_background"
        app:layout_constraintTop_toBottomOf="@+id/tv_jenisGangguan"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tv_teknisi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:text="@string/text_teknisi"
        android:textSize="18sp"
        android:fontFamily="@font/ubuntu_bold"
        android:textAlignment="center"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="@id/view2"
        app:layout_constraintBottom_toTopOf="@id/tv_teknisi_desc"
        app:layout_constraintStart_toStartOf="@id/view2"
        app:layout_constraintEnd_toEndOf="@id/view2"/>

    <TextView
        android:id="@+id/tv_teknisi_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:text="@string/text_progress"
        android:textSize="16sp"
        android:fontFamily="@font/ubuntu_medium"
        android:textAlignment="center"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/tv_teknisi"
        app:layout_constraintBottom_toBottomOf="@id/view2"
        app:layout_constraintStart_toStartOf="@id/view2"
        app:layout_constraintEnd_toEndOf="@id/view2"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/menu_background"
        app:layout_constraintStart_toStartOf="@id/progress_container"
        app:layout_constraintEnd_toEndOf="@id/progress_container"
        app:layout_constraintTop_toTopOf="@id/progress_container"
        app:layout_constraintBottom_toBottomOf="@id/progress_container"/>

    <View
        android:layout_width="3dp"
        android:layout_height="150dp"
        android:layout_marginStart="42dp"
        android:background="@color/solnet_orange_400"
        android:backgroundTint="@color/solnet_orange_400"
        app:layout_constraintStart_toStartOf="@id/progress_container"
        app:layout_constraintTop_toTopOf="@id/progress_container"/>

    <LinearLayout
        android:id="@+id/progress_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        app:background="@drawable/menu_background"
        app:layout_constraintTop_toBottomOf="@id/view2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/progress_0"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <View
                android:id="@+id/dot_progress_0"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="32dp"
                android:background="@drawable/progress_dot"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:id="@+id/tv_progress_0"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Laporan Anda Sedang diproses"
                android:fontFamily="@font/ubuntu_medium"
                android:textSize="16sp"
                app:layout_constraintStart_toEndOf="@id/dot_progress_0"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/tv_progress_0_timestamp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:text="12/12/2020 12:12"
                android:fontFamily="@font/ubuntu_regular"
                android:textSize="14sp"
                android:visibility="gone"
                app:layout_constraintStart_toEndOf="@id/dot_progress_0"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/progress_1"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <View
                android:id="@+id/dot_progress_1"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="32dp"
                android:background="@drawable/progress_dot_inactive"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:id="@+id/tv_progress_1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Proses Perbaikan"
                android:fontFamily="@font/ubuntu_medium"
                android:textSize="16sp"
                app:layout_constraintStart_toEndOf="@id/dot_progress_1"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/tv_progress_1_timestamp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:text="12/12/2020 12:12"
                android:fontFamily="@font/ubuntu_regular"
                android:textSize="14sp"
                android:visibility="gone"
                app:layout_constraintStart_toEndOf="@id/dot_progress_1"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/progress_2"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <View
                android:id="@+id/dot_progress_2"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="32dp"
                android:background="@drawable/progress_dot_inactive"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:id="@+id/tv_progress_2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Hasil Perbaikan"
                android:fontFamily="@font/ubuntu_medium"
                android:textSize="16sp"
                app:layout_constraintStart_toEndOf="@id/dot_progress_2"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/tv_progress_2_timestamp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:text="12/12/2020 12:12"
                android:fontFamily="@font/ubuntu_regular"
                android:textSize="14sp"
                android:visibility="gone"
                app:layout_constraintStart_toEndOf="@id/dot_progress_2"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/progress_3"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <View
                android:id="@+id/dot_progress_3"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginStart="32dp"
                android:background="@drawable/progress_dot_inactive"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:id="@+id/tv_progress_3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:fontFamily="@font/ubuntu_medium"
                android:text="Konfirmasi Hasil Perbaikan"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/dot_progress_3"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_progress_3_timestamp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:text="12/12/2020 12:12"
                android:fontFamily="@font/ubuntu_regular"
                android:textSize="14sp"
                android:visibility="gone"
                app:layout_constraintStart_toEndOf="@id/dot_progress_3"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_chat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="@color/solnet_blue_600"
        android:src="@drawable/ic_chat"
        app:tint="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />





</androidx.constraintlayout.widget.ConstraintLayout>