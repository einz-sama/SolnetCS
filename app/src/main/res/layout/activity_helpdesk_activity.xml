<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.cust.HelpdeskActivity"
    android:background="@drawable/androidsmall_22">

  <ImageView
      android:id="@+id/defaultlogo"
      android:layout_width="120dp"
      android:layout_height="120dp"
      android:layout_marginTop="32dp"
      android:layout_marginStart="32dp"
      android:background="@drawable/help"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

  <TextView
      android:id="@+id/helpdesk"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="10dp"
      android:layout_marginStart="32dp"
      android:text="Pusat Bantuan"
      android:textSize="24sp"
      android:textColor="@color/black"
      android:textStyle="bold"
      android:fontFamily="@font/ubuntu_bold"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@id/defaultlogo">
  </TextView>

  <View
      android:id="@+id/view1"
      android:layout_width="match_parent"
      android:layout_height="120dp"
      android:layout_marginTop="20dp"
      android:layout_marginStart="32dp"
      android:layout_marginEnd="32dp"
      android:background="@drawable/menu_background"
      app:layout_constraintTop_toBottomOf="@+id/helpdesk"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"/>

  <ImageView
      android:id="@+id/img_laporan"
      android:layout_width="64dp"
      android:layout_height="64dp"
      android:layout_marginTop="32dp"
      android:layout_marginStart="8dp"
      android:src="@drawable/ic_laporan"
      app:tint="@color/solnet_orange_400"
      app:layout_constraintBottom_toBottomOf="@id/view1"
      app:layout_constraintStart_toStartOf="@id/view1"
      app:layout_constraintTop_toTopOf="@id/helpdesk"
      app:layout_constraintEnd_toStartOf="@id/tv_laporan"/>

  <TextView
      android:id="@+id/tv_laporan"
      android:layout_width="250dp"
      android:layout_height="wrap_content"
      android:layout_marginTop="10dp"
      android:layout_marginBottom="5dp"
      android:layout_marginEnd="32dp"
      android:text="Anda mengalami gangguan?lakukan pengaduan layanan"
      android:textSize="16sp"
      android:fontFamily="@font/ubuntu_regular"
      android:textAlignment="center"
      android:textColor="@color/black"
      app:layout_constraintTop_toTopOf="@id/view1"
      app:layout_constraintStart_toEndOf="@id/img_laporan"
      app:layout_constraintEnd_toEndOf="@id/view1"/>

  <androidx.appcompat.widget.AppCompatButton
      android:id="@+id/btn_laporan"
      android:layout_width="250dp"
      android:layout_height="40dp"
      android:layout_marginTop="10dp"
      android:layout_marginBottom="70dp"
      android:background="@drawable/button_secondary"
      android:text="@string/laporan"
      android:textColor="@color/solnet_blue_800"
      android:textSize="14sp"
      android:textStyle="bold"
      android:fontFamily="@font/ubuntu_regular"
      app:layout_constraintEnd_toEndOf="@id/view1"
      app:layout_constraintStart_toEndOf="@id/img_laporan"
      app:layout_constraintTop_toBottomOf="@+id/tv_laporan" />

  <View
      android:id="@+id/view2"
      android:layout_width="match_parent"
      android:layout_height="120dp"
      android:layout_marginTop="20dp"
      android:layout_marginStart="32dp"
      android:layout_marginEnd="32dp"
      android:background="@drawable/menu_background"
      app:layout_constraintTop_toBottomOf="@+id/view1"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"/>

  <ImageView
      android:id="@+id/img_faq"
      android:layout_width="64dp"
      android:layout_height="64dp"
      android:layout_marginTop="32dp"
      android:layout_marginStart="8dp"
      android:src="@drawable/info"
      app:layout_constraintBottom_toBottomOf="@id/view2"
      app:layout_constraintStart_toStartOf="@id/view2"
      app:layout_constraintTop_toTopOf="@id/view2"
      app:layout_constraintEnd_toStartOf="@id/tv_faq"/>

  <TextView
      android:id="@+id/tv_faq"
      android:layout_width="250dp"
      android:layout_height="wrap_content"
      android:layout_marginTop="10dp"
      android:layout_marginBottom="5dp"
      android:layout_marginEnd="32dp"
      android:text="Ada yang perlu ditanyakan? lihat pertanyaan yang sering dibahas"
      android:textSize="16sp"
      android:fontFamily="@font/ubuntu_regular"
      android:textAlignment="center"
      android:textColor="@color/black"
      app:layout_constraintTop_toTopOf="@id/view2"
      app:layout_constraintStart_toEndOf="@id/img_faq"
      app:layout_constraintEnd_toEndOf="@id/view2"/>

  <androidx.appcompat.widget.AppCompatButton
      android:id="@+id/btn_faq"
      android:layout_width="250dp"
      android:layout_height="40dp"
      android:layout_marginTop="10dp"
      android:layout_marginBottom="70dp"
      android:background="@drawable/button_secondary"
      android:text="@string/faq"
      android:textColor="@color/solnet_blue_800"
      android:textSize="14sp"
      android:textStyle="bold"
      android:fontFamily="@font/ubuntu_regular"
      app:layout_constraintEnd_toEndOf="@id/view2"
      app:layout_constraintStart_toEndOf="@id/img_faq"
      app:layout_constraintTop_toBottomOf="@+id/tv_faq" />

  <View
      android:id="@+id/view3"
      android:layout_width="match_parent"
      android:layout_height="120dp"
      android:layout_marginTop="20dp"
      android:layout_marginStart="32dp"
      android:layout_marginEnd="32dp"
      android:background="@drawable/menu_background"
      app:layout_constraintTop_toBottomOf="@+id/view2"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"/>

  <ImageView
      android:id="@+id/img_bot"
      android:layout_width="64dp"
      android:layout_height="64dp"
      android:layout_marginTop="32dp"
      android:layout_marginStart="8dp"
      android:src="@drawable/help"
      app:layout_constraintBottom_toBottomOf="@id/view3"
      app:layout_constraintStart_toStartOf="@id/view3"
      app:layout_constraintTop_toTopOf="@id/view3"
      app:layout_constraintEnd_toStartOf="@id/tv_bot"/>

  <TextView
      android:id="@+id/tv_bot"
      android:layout_width="250dp"
      android:layout_height="wrap_content"
      android:layout_marginTop="10dp"
      android:layout_marginBottom="5dp"
      android:layout_marginEnd="32dp"
      android:text="Ada pertanyaan tentang langganan?"
      android:textSize="16sp"
      android:fontFamily="@font/ubuntu_regular"
      android:textAlignment="center"
      android:textColor="@color/black"
      app:layout_constraintTop_toTopOf="@id/view3"
      app:layout_constraintStart_toEndOf="@id/img_bot"
      app:layout_constraintEnd_toEndOf="@id/view3"/>

  <androidx.appcompat.widget.AppCompatButton
      android:id="@+id/btn_bot"
      android:layout_width="250dp"
      android:layout_height="40dp"
      android:layout_marginTop="10dp"
      android:layout_marginBottom="70dp"
      android:background="@drawable/button_secondary"
      android:text="@string/contact"
      android:textColor="@color/solnet_blue_800"
      android:textSize="14sp"
      android:textStyle="bold"
      android:fontFamily="@font/ubuntu_regular"
      app:layout_constraintEnd_toEndOf="@id/view3"
      app:layout_constraintStart_toEndOf="@id/img_bot"
      app:layout_constraintTop_toBottomOf="@+id/tv_bot" />


  </androidx.constraintlayout.widget.ConstraintLayout>