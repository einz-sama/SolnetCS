<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.cust.info.FaqActivity"
    android:background="@drawable/androidsmall_24">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/defaultlogo"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginTop="32dp"
            android:layout_marginStart="32dp"
            android:background="@drawable/help"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/helpdesk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="32dp"
            android:text="Pertanyaan Umum"
            android:textSize="24sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:fontFamily="@font/ubuntu_bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/defaultlogo">
        </TextView>

        <View
            android:id="@+id/view1"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:background="@drawable/menu_background"
            app:layout_constraintTop_toBottomOf="@+id/helpdesk"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/tv_q1"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:layout_marginEnd="32dp"
            android:text="Wifi Anda Lambat?"
            android:textSize="18sp"
            android:fontFamily="@font/ubuntu_medium"
            android:textAlignment="center"
            android:textColor="@color/black"
            app:layout_constraintTop_toTopOf="@id/view1"
            app:layout_constraintStart_toStartOf="@id/view1"
            app:layout_constraintEnd_toEndOf="@id/view1"/>

        <TextView
            android:id="@+id/tv_a1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:layout_marginEnd="32dp"
            android:text="Pastikan jarak anda tidak terlalu jauh atau terhalang banyak tembok dari ONT/Wifi \n Pastikan tidak terlalu banyak perangkat yang bersamaan menggunakan Wifi"
            android:textSize="16sp"
            android:fontFamily="@font/ubuntu_regular"
            android:textAlignment="center"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@id/tv_q1"
            app:layout_constraintStart_toStartOf="@id/view1"
            app:layout_constraintEnd_toEndOf="@id/view1"/>

        <View
            android:id="@+id/view2"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:background="@drawable/menu_background"
            app:layout_constraintTop_toBottomOf="@+id/view1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/tv_q2"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:layout_marginEnd="32dp"
            android:text="Tidak bisa akses Internet?"
            android:textSize="18sp"
            android:fontFamily="@font/ubuntu_medium"
            android:textAlignment="center"
            android:textColor="@color/black"
            app:layout_constraintTop_toTopOf="@id/view2"
            app:layout_constraintStart_toStartOf="@id/view2"
            app:layout_constraintEnd_toEndOf="@id/view2"/>

        <TextView
            android:id="@+id/tv_a2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:layout_marginEnd="32dp"
            android:text="Restart ONT/Wifi dengan menekan tombol dibelakang ONT/Wifi dan tunggu 10 detik sebelum menekan lagi untuk menyalakanya. \n Jika masih tidak bisa mengakses Internet, lapor terjadinya gangguan"
            android:textSize="16sp"
            android:fontFamily="@font/ubuntu_regular"
            android:textAlignment="center"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@id/tv_q2"
            app:layout_constraintStart_toStartOf="@id/view2"
            app:layout_constraintEnd_toEndOf="@id/view2"/>




</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>